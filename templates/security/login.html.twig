{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="d-flex justify-content-center">
<div class="row">
<form method="post">
    
    {% if app.user %}
        <div class="m-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}


<div class="d-flex justify-content-center mt-5"><h4>Sign In</h4>
</div>

    <div class="input-group mb-3">
        <span class="input-group-text"><i class="fa fa-envelope"></i> </span>
        <input type="text" value="{{ last_username }}" class="form-control" placeholder="Enter Email" id="inputEmail" name="email" autocomplete="email" required autofocus/>
        </div>
        
        <div class="input-group mb-3">
        <span class="input-group-text"><i class="fa fa-key"></i> </span>
        <input type="password" class="form-control" placeholder="Enter Password" id="inputPassword" name="password" autocomplete="current-password" required/>
        </div>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >


<div class="text-center">
<button type="submit" class="btn btn-primary">Sign in</button>
</div>

    {% if error %}
    <div class="mt-2">
    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    </div>
    {% endif %}


</form>
</div>
</div>
{% endblock %}
